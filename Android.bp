android_app {
  name: "OmniStoreInstaller",
  manifest: "app/src/main/AndroidManifest.xml",
  sdk_version: "current",

  srcs: [
    "app/src/main/**/*.kt",
    "app/src/main/**/*.java",
  ],

  resource_dirs: [
    "app/src/main/res/",
  ],

  static_libs: [
    "androidx.core_core",
    "androidx.appcompat_appcompat",
    "com.google.android.material_material",
  ],

  kotlincflags: ["-Xjvm-default=enable"],
  
  optimize: {
    enabled: false,
  },
}
